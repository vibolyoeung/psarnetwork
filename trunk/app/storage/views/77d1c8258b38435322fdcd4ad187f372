<section id="slider">
	<!--slider-->
	<div class="row">
		<div class="col-sm-12">
			<div id="slider-carousel" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
				<?php $i=0;?>
					<?php foreach($slideshows as $slideshow): ?>
						<?php 
							$exp_date = $slideshow->expire_date;
							$exp_date = str_replace('/', '-', $exp_date);
							
							$created_date = $slideshow->created_date;
							$created_date =str_replace('/', '-', $created_date); 
						?>
						<?php if(strtotime($exp_date) >= strtotime($created_date)): ?>
							<li data-target="#slider-carousel" data-slide-to="<?php echo $i;?>" class="bullet"></li>
						<?php endif; ?>
						<?php $i++;?>
					<?php endforeach; ?>
				</ol>
				<div class="carousel-inner">
				
				<?php foreach($slideshows as $slideshow): ?>
					<?php 
						$exp_date = $slideshow->expire_date;
						$exp_date = str_replace('/', '-', $exp_date);
						
						$created_date = $slideshow->created_date;
						$created_date =str_replace('/', '-', $created_date); 
					?>
					<?php if(strtotime($exp_date) >= strtotime($created_date)): ?>
						<div class="item">
						<div class="col-sm-6">
							<h3>
								<span><?php echo $slideshow->title;; ?></span>
							</h3>
							<p><?php echo $slideshow->short_desc;; ?></p>
							<a href='<?php echo URL::to("product/product_detail"); ?>/<?php echo $slideshow->id; ?>' class="btn btn-default get">View Details</a>
						</div>
						<div class="col-sm-6">
							<img src="<?php echo Config::get('app.url'); ?>/upload/slideshow/<?php echo $slideshow->image;; ?>" class="girl img-responsive" alt="" /> 
							<!-- <img src="<?php echo Config::get('app.url'); ?>/frontend/images/home/pricing.png" class="pricing" alt="" /> -->
						</div>
					</div>
					<?php endif; ?>
				<?php endforeach; ?>
				</div>
				<a href="#slider-carousel" class="left control-carousel hidden-xs"
					data-slide="prev"> <i class="fa fa-angle-left"></i>
				</a> <a href="#slider-carousel"
					class="right control-carousel hidden-xs" data-slide="next"> <i
					class="fa fa-angle-right"></i>
				</a>
			</div>
		</div>
	</div>
</section>
