<?php echo HTML::script('frontend/js/jquery.validate.js'); ?>

<script type='text/javascript'>
	
	
	
	
$(document).ready(function(){
    $('#skipDetail').click(function () {
        if($(this).is(":checked")) {
            $("#bodyDetail").slideUp();
        } else {
            $("#bodyDetail").slideDown();
        }
    });    
    $("#AgreeForm").validate({
          rules: {
      agreement: {
         required : true
      }
  },
  messages:{
      agreement: {
        required : "check the checbox"
      }
  }
    });
    //$("#AgreeForm").validate();

});




</script>
